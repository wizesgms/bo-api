<div class="top-bar">
    <div class="-intro-x breadcrumb mr-auto hidden sm:flex">
        <div class="mr-4">
            <div class="font-medium"><%= __('topbar.agent_balance') %></div>
            <div class="text-xs">
            <span style="color: #5d43f3!important;"><%= session.auth.currency %> </span><span id="agent_balance" class="balance">0</span>
            </div>
        </div>
        <div class="mr-4">
            <div class="font-medium"><%= __('topbar.agent_sum_balance') %></div>
            <div class="text-xs">
                <span style="color: #5d43f3!important;"><%= session.auth.currency %> </span><span id="child_agent_balance_sum" class="balance">0</span>
            </div>
        </div>
        <div class="mr-4">
            <div class="font-medium"><%= __('topbar.sub_user_sum') %></div>
            <div class="text-xs">
                <span style="color: #5d43f3!important;"><%= session.auth.currency %> </span><span id="child_user_balance_sum">0</span>
            </div>
        </div>
        <div class="mr-4">
            <div class="font-medium"><%= __('topbar.child_total_balance') %></div>
            <div class="text-xs">
                <span style="color: #5d43f3!important;"><%= session.auth.currency %> </span><span id="child_total_sum">0</span>
            </div>
        </div>
        <div class="mr-4">
            <div class="font-medium"><%= __('topbar.agent_percent') %></div>
            <div class="text-xs">
                <span style="color: #5d43f3!important;"><%= session.auth.currency %> </span><span id="agent-percent"><%= session.auth.percent %>%</span>
            </div>
        </div>
        <div class="mr-4">
            <div class="font-medium"><%= __('topbar.agent_rtp') %></div>
            <div class="text-xs">
                <span id="agent-rtp"> <%= session.auth.rtp %>%</span>
                &nbsp;
                <span style="cursor: pointer; color: blue" onclick="changeRtp()">[<%= __('topbar.change') %>]</span>
            </div>
        </div>
    </div>

